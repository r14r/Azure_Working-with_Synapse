{
    "name": "SAP HANA TO ADLS",
    "properties": {
        "activities": [
            {
                "name": "1 Ingest data from SAP HANA to Azure Synapse",
                "type": "ExecuteDataFlow",
                "dependsOn": [
                    {
                        "activity": "SAPHANAFinanceto_ADLS",
                        "dependencyConditions": [
                            "Succeeded"
                        ]
                    }
                ],
                "policy": {
                    "timeout": "7.00:00:00",
                    "retry": 0,
                    "retryIntervalInSeconds": 30,
                    "secureOutput": false,
                    "secureInput": false
                },
                "userProperties": [],
                "typeProperties": {
                    "dataflow": {
                        "referenceName": "ingest_data_from_sap_hana_to_azure_synapse",
                        "type": "DataFlowReference"
                    },
                    "staging": {
                        "linkedService": {
                            "referenceName": "#DATA_LAKE_STORAGE_NAME#",
                            "type": "LinkedServiceReference"
                        },
                        "folderPath": "staging"
                    },
                    "compute": {
                        "coreCount": 8,
                        "computeType": "General"
                    }
                }
            },
            {
                "name": "SAPHANAFinanceto_ADLS",
                "type": "Copy",
                "dependsOn": [],
                "policy": {
                    "timeout": "7.00:00:00",
                    "retry": 0,
                    "retryIntervalInSeconds": 30,
                    "secureOutput": false,
                    "secureInput": false
                },
                "userProperties": [],
                "typeProperties": {
                    "source": {
                        "type": "SapHanaSource",
                        "query": "select * from \"DEMODB\".\"FactInternetSalesS\";",
                        "partitionOption": "None"
                    },
                    "sink": {
                        "type": "DelimitedTextSink",
                        "storeSettings": {
                            "type": "AzureBlobFSWriteSettings"
                        },
                        "formatSettings": {
                            "type": "DelimitedTextWriteSettings",
                            "quoteAllText": true,
                            "fileExtension": ".txt"
                        }
                    },
                    "enableStaging": false
                },
                "inputs": [
                    {
                        "referenceName": "SourceDataset_d89",
                        "type": "DatasetReference"
                    }
                ],
                "outputs": [
                    {
                        "referenceName": "DestinationDataset_d89",
                        "type": "DatasetReference"
                    }
                ]
            }
        ],
        "annotations": []
    },
    "type": "Microsoft.Synapse/workspaces/pipelines"
}